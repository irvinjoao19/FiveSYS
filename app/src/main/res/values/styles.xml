<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/colorWhite</item>
    </style>

    <style name="TabLayout_Theme" parent="Base.ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:singleLine">true</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@color/colorPlomo</item>
        <item name="android:textColorSecondary">@color/colorPlomo</item>
        <item name="actionMenuTextColor">@color/colorPlomo</item>
    </style>
</resources>
